        <addForeignKeyConstraint baseColumnNames="blog_id"
                                 baseTableName="comment"
                                 constraintName="fk_comment__blog_id"
                                 referencedColumnNames="id"
                                 referencedTableName="blog"/>
    </changeSet>
</databaseChangeLog>
